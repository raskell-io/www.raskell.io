#!/usr/bin/env bash
#MISE description="Download Geist fonts from GitHub"

set -euo pipefail

FONTS_DIR="static/fonts"
GEIST_VERSION="1.4.0"
GEIST_URL="https://github.com/vercel/geist-font/releases/download/${GEIST_VERSION}"

# Create fonts directory
mkdir -p "${FONTS_DIR}"

echo "ðŸ“¥ Downloading Geist fonts..."

# Download Geist Sans Variable
echo "  â†’ Geist Sans Variable..."
curl -sL "${GEIST_URL}/Geist-Variable.woff2" -o "${FONTS_DIR}/Geist-Variable.woff2"

# Download Geist Mono Variable
echo "  â†’ Geist Mono Variable..."
curl -sL "${GEIST_URL}/GeistMono-Variable.woff2" -o "${FONTS_DIR}/GeistMono-Variable.woff2"

echo "âœ… Fonts downloaded successfully to ${FONTS_DIR}/"
